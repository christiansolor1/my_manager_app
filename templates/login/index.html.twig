{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="auth-main">
		<div class="auth-wrapper frm-register">
			<div class="auth-form">
				<div class="card">
					<div class="card-body">
						<a href="#" class="d-flex justify-content-center">
							<img class="imagelogo_login" src="images/logo.svg" alt="image">
						</a>
						<div class="row">
							<div class="d-flex justify-content-center">
								<div class="auth-header txt-head-1">
									<h2 class=" text-secondary ">
										<b>My Manage App</b>
									</h2>
									<p class="">Ingresa tus credenciales</p>
								</div>
							</div>
						</div>

						<form action="{{ path('app_login') }}" method="post" class="needs-validation">
							<div class="form-floating mb-3">
								<label for="username">Correo / Username</label>
								<input type="text" class="form-control inpt_text_login" id="username" name="_username" value="{{ last_username }}" placeholder="Email address / Username" required>

							</div>
							<div class="form-floating mb-3">
								<label for="password">Contraseña</label>
								<input type="password" class="form-control" id="password" name="_password" placeholder="Contraseña" required>

							</div>


							<div class="d-flex mt-1 justify-content-between rl">
								<div class="form-check">
									<input class="form-check-input input-primary" type="checkbox" id="customCheckc1" checked>
									<label class="form-check-label text-muted rl" for="customCheckc1">Remember me</label>
								</div>
								<a href="url_para_reiniciar_contraseña">¿Has olvidado tu contraseña?</a>
							</div>
							<div class="d-grid mt-4">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<button type="submit" class="btn btn-secondary">Iniciar sesión</button>
								{# If you want to control the URL the user is redirected to on success
																<input type="hidden" name="_target_path" value="/account"> #}
							</div>
						</form>

						<hr>
						<h5 class="d-flex justify-content-center">¿No tienes una cuenta?</h5>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
