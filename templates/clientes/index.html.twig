                $('.subcategory-checkbox:checked').each(function () {
                    selectedSubcategories.push($(this).next('label').text());
                });

                var selectedSubcategoriesList = $('#selectedSubcategories');
                selectedSubcategoriesList.empty();
                selectedSubcategories.forEach(function (subcategory) {
                    selectedSubcategoriesList.append('<li>' + subcategory + '</li>');
                });
            });
        });
